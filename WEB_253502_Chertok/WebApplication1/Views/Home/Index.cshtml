@{
    ViewBag.Title = "Index";
}

                <h1>@ViewData["Message"]</h1>
                <div>
                    <h2>Список</h2>
                    <ol class="list-group" style="list-style-type: upper-alpha;">
                        @for(int i = 0; i < 5; ++i)
                        {<li>элемент @i спсика</li>}
                    </ol>
                </div>
                <hr class="mt-3 mb-3"/>
                <h2>Форма</h2>
                <form method="post" class="mt-3">
                    <select class="mt-3 form-control" id="Model.SelectedId" name="selectDemo" asp-items="Model.ListItems">
                    </select>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <div class="form-check">
                                <input type="checkbox" id="checkbox1" class="form-check-input"/>
                                <label for="checkbox1" class="form-check-label">Чек-бокс 1</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" id="checkbox2" class="form-check-input"/>
                                <label for="checkbox2" class="form-check-label">Чек-бокс 2</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <div class ="form-check form-check-inline">
                                <input type="radio" id="radio1" name="radio1" class="form-check-input" />
                                <label for="radio1" class="form-check-label">Радио-1</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input type="radio" id="radio2" name="radio2" class="form-check-input" />
                                <label for="radio2" class="form-check-label">Радио-2</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input type="radio" id="radio3" name="radio3" class="form-check-input" />
                                <label for="radio3" class="form-check-label">Радио-3</label>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="row mb-3">
                            <label for="input" class="col-sm-2 col-form-label">Логин: </label>
                            <div class="col-sm-10">
                                <input type="text" id="input" name="input" placeholder="Введите имя" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="password" class="col-sm-2 col-form-label">Пароль: </label>
                            <div class="col-sm-10">
                                <input type="password" id="password" name="password" placeholder="Введите пароль" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="mt-3 btn btn-primary">Отправить</button>
                </form>
