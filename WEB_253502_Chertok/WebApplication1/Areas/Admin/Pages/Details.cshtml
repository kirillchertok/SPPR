@page "{id:int?}"
@model WEB_253502_Chertok.Areas.Admin.Pages.DetailsModel
@{
	ViewData["Title"] = "Details";
}

<div class="container">
	<div class="row">
		<div class="col-md-4">
			<p class="fs-2 fw-bold">Details</p>
			<p class="fs-4 fw-bold">Product</p>
			<hr />
			<form method="post" enctype="multipart/form-data">
				<input type="hidden" asp-for="Product.Id" />
				<div class="form-group">
					<label for="name">Name</label>
					<label for="name">@Model.Product.Name</label>
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<label for="description">@Model.Product.Description</label>
				</div>
				<div class="form-group">
					<label for="price">Price</label>
					<label for="price">@Model.Product.Price</label>
				</div>
				<div class="form-group">
					<label for="picker">Category</label>
					<label for="picker">@Model.CategoryName</label>
				</div>
				<div class="form-group">
					<img src="@Model.Product.Image" />
				</div>
				<a asp-controller="Product" asp-action="Index">Back to list</a>
			</form>
		</div>
	</div>
</div>
